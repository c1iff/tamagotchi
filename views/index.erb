<ul>
  <% @monsters.each() do |monster| %>
  <li><a href="/monster/<%= monster.name() %>"><%= monster.name() %></a></li>
  <% end %>
</ul>

<form action="create_monster">
  <label for="new_monster">Enter in the name of your new monster</label>
  <input type="text" name="new_monster" id="new_monster">
  <br>
  <button type="submit" class="btn btn-success">Create!</button>
</form>
<br>
<form action="clear">
  <button name="clear" class="btn btn-primary">Clear Database</button>
</form>
